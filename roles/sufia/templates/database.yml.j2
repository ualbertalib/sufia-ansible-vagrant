default: &default
  adapter: mysql2 
  username: {{ db_user }} 
  password: {{ db_password }}
  host: {{ db_host }}
  port: {{ db_port }}
  pool: 5
  timeout: 5000

development:
  <<: *default
  database: {{ db_name }}dev 

{{ rails_env }}:
  <<: *default
  database: {{ db_name }}test

{{ rails_env }}:
  <<: *default
  database: {{ db_name }}prod
